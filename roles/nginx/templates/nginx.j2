upstream vcc
{
	server unix:{{ install_root }}/{{ project_name }}/{{ project_name }}.sock;
}

server {
	listen 80;
	charset utf-8;

	location /static {
		alias {{ static_root }};
	}

	location / {
		proxy_pass http://vcc;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}
}
